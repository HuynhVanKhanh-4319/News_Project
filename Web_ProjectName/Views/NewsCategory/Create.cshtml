@model Web_ProjectName.Models.EM_NewsCategory

<h2>Tạo mới danh mục tin tức</h2>

<form id="formCreateNewsCategory" method="post">
    <div class="form-group mb-3">
        <label for="Name">Tên danh mục</label>
        <input id="Name" name="Name" value="@Model?.name" class="form-control" placeholder="Nhập tên danh mục" required />
    </div>

    <div class="form-group mb-3">
        <label for="NameSlug">Slug</label>
        <input id="NameSlug" name="NameSlug" value="@Model?.nameSlug" class="form-control" placeholder="Nhập slug" />
    </div>

    <div class="form-group mb-3">
        <label for="Remark">Ghi chú</label>
        <input id="Remark" name="Remark" value="@Model?.remark" class="form-control" placeholder="Ghi chú" />
    </div>

    <div class="form-group mb-4">
        <label for="Status">Trạng thái</label>
        <select id="Status" name="Status" class="form-control">
            <option value="1">Hiện</option>
            <option value="0">Ẩn</option>
        </select>
    </div>

    <button type="button" id="btnCreate" class="btn btn-success">Tạo mới</button>
</form>
<div id="resultMessage"></div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/controllers/newsCategory.js" asp-append-version="true"></script>
}